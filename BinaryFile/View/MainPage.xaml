<Page x:Class="BinaryFile.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BinaryFile.View"
      xmlns:vm="clr-namespace:BinaryFile.VM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="104*"/>
        </Grid.RowDefinitions>
        <Button Content="Открыть файл" Command="{Binding GetFile}" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" Width="188"/>
        <TextBox Margin="280,80,280,10" TextWrapping="Wrap" Text="{Binding MiddleSource}" Grid.RowSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="22,80,0,10" TextWrapping="Wrap" Text="{Binding TopSource}" Width="189" Grid.RowSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="580,80,0,10" TextWrapping="Wrap" Text="{Binding BottomSource}" Width="194" Grid.RowSpan="2"/>

    </Grid>
</Page>
